{% block body %}
	<div class="ecoride-container rounded p-1 m-2">
		<div class="oxanium mt-3 rounded p-4 mx-auto">
			<h3 class="text-center viga-regular">Ajout d'une voiture :</h3>
			<hr>

			{{ form_start(form, {'attr': {'class': 'w-100'}}) }}

			<div class="row g-3">
				<div class="col-12 col-md-6">
					{{ form_row(form.marque) }}
				</div>
				<div class="col-12 col-md-6">
					{{ form_row(form.model) }}
				</div>

				<div class="col-12 col-md-6">
					{{ form_row(form.registration) }}
				</div>
				<div class="col-12 col-md-6">
					{{ form_row(form.first_date_registration) }}
				</div>

				<div class="col-12 col-md-6">
					{{ form_row(form.power_engine) }}
				</div>
				<div class="col-12 col-md-6">
					{{ form_row(form.color) }}
				</div>

				<div class="col-12 text-center">
					{{ form_row(form.save) }}
				</div>
			</div>

			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
