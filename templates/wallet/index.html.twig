{% extends 'base.html.twig' %}

{% block title %}Mon portefeuille
{% endblock %}

{% block body %}
	<div class="oxanium ecoride-container p-lg-5 justify-content-center mt-5 rounded">
		<h1 class="my-3 text-center viga-regular">Mon portefeuille :
		</h1>
		<div class="justify-content-center row">
			<table class="table w-50">
				<tbody>
					<tr>
						<th>
							Mon solde :
						</th>
						<td class="text-end">
							{{user.ecopiece == null ? '0' : user.ecopiece}}
							<i class="bi bi-coin"></i>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
		<div class="text-end">
			<a class="btn btn-success row text-right">Acheter des écopièces</a>
		</div>
	</div>
{% endblock %}
