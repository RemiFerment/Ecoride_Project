{% set photoBase64 = participation.user.photo |to_base64 %}
<div class="row 2 p-lg-3 p-2 bg-light text-dark my-2 rounded shadow align-items-center gap-2">
	<div class="col">
		<div class="d-flex flex-column align-items-center text-center">
			{% if photoBase64 is not null %}
				<img src="data:image/png;base64,{{ photoBase64|e }}" class="profile-img" alt="Photo de profil de {{ participation.user.username }}">
			{% else %}
				<img src="{{ asset('import/blank-profile.png') }}" class="profile-img" alt="Photo de profil par défaut">
			{% endif %}
			<span class="fs-5 fw-bold">{{ participation.user.username }}</span>
		</div>
	</div>

	<div class="col">
		<div class="d-flex flex-column align-items-center text-center">
			<span class="fs-5 fw-bold">{{ participation.user.firstname }}
				{{ participation.user.lastname }}</span>
			<span class="fs-5 mt-3">Note :</span>
			<span>{{ participation.user.grade ?? '--' }}
				/ 5</span>
		</div>
	</div>
	{% if carpool.statut == 'ONLINE' and carpool.isCancelable %}
		<div class="col">
			<button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmModal" data-url={{path('app_mycarpool_kick_user',{'carpooling_id':carpool.id,'user_id':participation.user.id} )}} data-title="Confirmation d'expulsion" data-body="Êtes-vous sûr de vouloir expluser {{participation.user.username}}?" data-method="POST">
				Expulser
			</button>
		</div>
	{% endif %}
</div>
