<div class="card ecoride-container px-3 pb-3" style="width: 20rem;">

	<div class="card-body text-center">
		<h5 class="card-title">Trajet du
			{{carpool.startdate | date("d/m/Y")}}</h5>
		<hr>

		<div class="d-flex justify-content-between">
			<span class="card-text">
				<i class="bi bi-geo-alt-fill"></i>
			</span>
			<span class="card-text">
				<i class="bi bi-flag"></i>
			</span>
		</div>

		<div class="d-flex justify-content-between">
			<span class="card-text">{{carpool.startplace}}</span>
			<i class="bi bi-chevron-double-right"></i>
			<span class="card-text">{{carpool.endplace}}</span>
		</div>
	</div>

	<ul class="list-group list-group-flush rounded">

		<li class="list-group-item d-flex justify-content-between">
			<span>
				<i class="bi bi-clock"></i>
				Heure de départ :</span>
			<span>
				{{carpool.startdate | date("H:i")}}
			</span>
		</li>

		<li class="list-group-item d-flex justify-content-between">
			<span>
				<i class="bi bi-clock"></i>
				Heure d'arrivée :</span>
			<span>{{carpool.enddate | date("H:i")}}</span>
		</li>

		<li class="list-group-item d-flex justify-content-between">
			<span>
				<i class="bi bi-person-check"></i>
				place(s) restante(s) :</span>
			<span>{{carpool.availableseat}}</span>
		</li>

		<li class="list-group-item d-flex justify-content-between">
			<span>
				<i class="bi bi-currency-exchange"></i>
				Prix (en Écopièce) :</span>
			<span>{{carpool.priceperperson}}</span>
		</li>
		<li class="list-group-item d-flex justify-content-between">
			<span>
				<i class="bi bi-car-front-fill"></i>
				Voiture utilisé :</span>
			<span>{{carpool.car.marque.name}}
				{{carpool.car.model}}
			</span>
		</li>

	</ul>
	<div class="card-body d-flex justify-content-between">
		<a href="{{path('app_carpool_details',{id: carpool.id})}}" class="btn btn-success">Afficher les détails</a>
		{% if carpool.statut == 'ONLINE' %}
			<button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmModal" data-url={{path('app_carpool_delete',{id: carpool.id} )}} data-title="Confirmation d'annulation" data-body="Êtes-vous sûr de vouloir d'annuler ce trajet ? Cette action est irréversible." data-method="DELETE">
				Annuler
			</button>
		{% endif %}
	</div>
</div>
