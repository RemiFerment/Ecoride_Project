<div class="card" style="width: 18rem;">

	<div class="card-body text-center">
		<h5 class="card-title">Trajet du
			{{carpool.startdate | date("d/m/Y")}}</h5>
		<hr>

		<div class="d-flex justify-content-between">
			<span class="card-text">
				<i class="bi bi-geo-alt-fill"></i>
			</span>
			<span class="card-text">
				<i class="bi bi-flag"></i>
			</span>
		</div>

		<div class="d-flex justify-content-between">
			<span class="card-text">{{carpool.startplace}}</span>
			<i class="bi bi-chevron-double-right"></i>
			<span class="card-text">{{carpool.endplace}}</span>
		</div>
	</div>

	<ul class="list-group list-group-flush">

		<li class="list-group-item d-flex justify-content-between">
			<span>
				<i class="bi bi-clock"></i>
				Heure de départ :</span>
			<span>
				{{carpool.starthour | date("H:i")}}
			</span>
		</li>

		<li class="list-group-item d-flex justify-content-between">
			<span>
				<i class="bi bi-clock"></i>
				Heure d'arrivée :</span>
			<span>{{carpool.endhour | date("H:i")}}</span>
		</li>

		<li class="list-group-item d-flex justify-content-between">
			<span>
				<i class="bi bi-person-check"></i>
				Nombre de place(s) restante(s) :</span>
			<span>{{carpool.avaibleseat}}</span>
		</li>

		<li class="list-group-item d-flex justify-content-between">
			<span>
				<i class="bi bi-currency-exchange"></i>
				Prix (en Écopièce) :</span>
			<span>{{carpool.priceperperson}}</span>
		</li>
		<li class="list-group-item d-flex justify-content-between">
			<span>
				<i class="bi bi-currency-exchange"></i>
				Voiture utilisé :</span>
			<span>{{carpool.car.marque.name}}
				{{carpool.car.model}}
			</span>
		</li>

	</ul>
	{% if previous is not defined %}
		<div class="card-body d-flex justify-content-between">
			<a href="" class="btn btn-primary">Modifier</a>
			<a href="{{path('app_carpool_delete',{id: carpool.id})}}" class="btn btn-danger">Supprimer</a>
		</div>
	{% endif %}
</div>
