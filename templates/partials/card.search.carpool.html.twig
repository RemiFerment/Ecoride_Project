{% set user = carpool.createdBy %}
{% set photoBase64 = user.photo|to_base64 %}
<div class="d-flex justify-content-center oxanium">
	<div class="ecoride-container my-3 rounded shadow">

		<div class="container justify-content-center">
			<div class="row text-center my-4 justify-content-center">

				<div class="col-12 col-lg-auto d-flex justify-content-center">
					<div class="d-flex flex-row flex-lg-column align-items-center justify-content-center gap-3">
						{% if photoBase64 is not null %}
							<img src="data:image/png;base64,{{ photoBase64|e }}" class="profile-img rounded-circle img-fluid" alt="Image de profil" style="width:64px; height:64px; object-fit:cover;">
						{% else %}
							<img src="{{ asset('import/blank-profile.png') }}" alt="Image par défaut" class="profile-img rounded-circle img-fluid" style="width:64px; height:64px; object-fit:cover;">
						{% endif %}
						<div class="text-center">
							<a href="{{ path('app_driver_details', {id: user.id}) }}" class="fs-5 fw-bold ecoride-link d-block">
								{{ user.username }}
							</a>
							<div>Note : {{ user.grade is null ? '--' : user.grade }}/5</div>
						</div>
					</div>
				</div>
				<div class="col-lg-auto">
					<div class="row">
						<div class="col-lg-auto text-start">
							<div class="p-2 my-3 rounded" style="background-color: whitesmoke;">
								<i class="me-3 bi bi-geo-alt"></i>
								{{carpool.startPlace}}</div>
							<div class="p-2 my-3 rounded" style="background-color: whitesmoke;">
								<i class="me-3 bi bi-clock"></i>
								Date :
								{{carpool.startdate | date("d / m / Y") }}</div>
							<div class="p-2 my-3 rounded" style="background-color: white;">
								<i class="bi bi-coin me-3"></i>Prix de la course :
								{{carpool.pricePerPerson}}
							</div>
							<div class="p-2 my-3 rounded" style="background-color: {{ carpool.car.powerEngine == 'Electrique' ? " green" : " red" }}; color : white ">
								<i class="bi bi-car-front me-3"></i>
								{{carpool.car.powerEngine}}
							</div>
						</div>

						<div class="col-lg-auto text-start">
							<div class="col-lg">
								<div class="p-2 my-3 rounded" style="background-color: whitesmoke;">
									<i class="me-3 bi bi-flag"></i>
									{{carpool.endPlace}}</div>
								<div class="p-2 my-3 rounded" style="background-color: whitesmoke;">
									<i class="me-3 bi bi-clock"></i>
									Heure :
									{{carpool.startdate | date("H:i") }}</div>
							</div>
							<div class="p-2 my-3 rounded" style="background-color: white;">
								<i class="bi bi-person me-3"></i>Place(s) restante(s) :
								{{carpool.availableSeat}}
							</div>
							<div class="input-group">
								<a type="button" class="form-control btn-ecoride text-left p-2 text-white mb-3" href="{{path('app_search_carpool_detail', {id: carpool.id})}}">
									<i class="bi bi-info-square me-3"></i>
									Afficher les détails
								</a>
							</div>
						</div>
					</div>
				</div>

			</div>
		</div>
	</div>
</div>
