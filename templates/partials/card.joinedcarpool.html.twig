<div class="card ecoride-container px-3 pb-3" style="width: 20rem;">

	<div class="card-body text-center">
		<h5 class="card-title">Trajet du
			{{carpool.startdate | date("d/m/Y")}}</h5>
		<hr>

		<div class="d-flex justify-content-between">
			<span class="card-text">
				<i class="bi bi-geo-alt-fill"></i>
			</span>
			<span class="card-text">
				<i class="bi bi-flag"></i>
			</span>
		</div>

		<div class="d-flex justify-content-between">
			<span class="card-text">{{carpool.startplace}}</span>
			<i class="bi bi-chevron-double-right"></i>
			<span class="card-text">{{carpool.endplace}}</span>
		</div>
	</div>

	<ul class="list-group list-group-flush rounded">

		<li class="list-group-item d-flex justify-content-between">
			<span>
				<i class="bi bi-person"></i>
				Proposé par :</span>
			<span>
				{{carpool.createdby.username}}
			</span>
		</li>
		<li class="list-group-item d-flex justify-content-between">
			<span>
				<i class="bi bi-clock"></i>
				Heure de départ :</span>
			<span>
				{{carpool.startdate | date("H:i")}}
			</span>
		</li>

		<li class="list-group-item d-flex justify-content-between">
			<span>
				<i class="bi bi-clock"></i>
				Heure d'arrivée :</span>
			<span>{{carpool.enddate | date("H:i")}}</span>
		</li>

		<li class="list-group-item d-flex justify-content-between">
			<span>
				<i class="bi bi-currency-exchange"></i>
				Prix (en Écopièce) :</span>
			<span>{{carpool.priceperperson}}</span>
		</li>
		<li class="list-group-item d-flex justify-content-between">
			<span>
				<i class="bi bi-car-front-fill"></i>
				Voiture utilisé :</span>
			<span>{{carpool.car.marque.name}}
				{{carpool.car.model}}
			</span>
		</li>

	</ul>
	{% if previous is defined %}
		<div class="card-body d-flex justify-content-between">
			<a href="{{path('app_search_carpool_detail',{id: carpool.id})}}" class="btn btn-success">Afficher les détails</a>
			<a class="btn btn-danger disabled">Annuler</a>
		</div>
	{% else %}
		<div class="card-body d-flex justify-content-between">
			<a href="{{path('app_search_carpool_detail',{id: carpool.id})}}" class="btn btn-success">Afficher les détails</a>
			<a href="{{path('app_carpool_delete',{id: carpool.id})}}" class="btn btn-danger">Annuler</a>
		</div>
	{% endif %}
</div>
